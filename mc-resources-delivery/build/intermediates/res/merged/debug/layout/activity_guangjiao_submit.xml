<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:cacheColorHint="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5.0dip" >

    <ScrollView
        android:id="@+id/temp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_button"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="地市公司" />
<EditText
                        android:id="@+id/qsd_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:hint="点击输入"
                        android:paddingTop="3.0dip"
                        android:text="" />
               
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="区县" />
                <EditText
                        android:id="@+id/zzd_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      android:hint="点击输入"
                        android:paddingTop="3.0dip"
                        android:text="" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="光交接箱名称" />

                <EditText
                        android:id="@+id/jgr_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:hint="点击输入"
                        android:paddingTop="3.0dip"
                        android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="是否主干光交" />

                 <Spinner
                    android:id="@+id/lyzt_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>
            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="是否直接接入客户" />

               <Spinner
                    android:id="@+id/isok_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="接入主干光交接箱客户名称" />
   <EditText
                        android:id="@+id/main_name_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content"
                        android:paddingTop="3.0dip"
                        android:text=""
                        android:hint="点击输入"
                         />
               
            </LinearLayout>
            
              <LinearLayout
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="是否有隐患" />

               <Spinner
                    android:id="@+id/iserro_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>
            
              
              <LinearLayout
                  android:id="@+id/ll_erro"
                    android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                   >
               
                  
               <LinearLayout
                   
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="隐患类型" />

               <Spinner
                    android:id="@+id/type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>
            
               
               <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="隐患描述" />
   <EditText
                        android:id="@+id/info_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                       
                        android:paddingTop="3.0dip"
                          android:hint="点击输入"
                        android:text="" />
               
            </LinearLayout>
            
               </LinearLayout>
                
               <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="是否整改完成" />

               <Spinner
                    android:id="@+id/is_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>
            
               
                 <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="5.0dip"
                     android:visibility="gone"
                     >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="整改日期" />
                
  				 <TextView
                        android:id="@+id/time_edit"
                        style="@style/edit_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                		android:text="点击选择"        
                        android:paddingTop="3.0dip"
                         />
               
            </LinearLayout>
            
                 
                 
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="交割状态" />
           <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
               
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_button"
        style="@style/formActionArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        
        android:layout_alignParentBottom="true"
        
        >

        <Button
            android:id="@id/take_photo_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:onClick="cs_take_photo"
            android:text="拍照"
            android:textSize="16sp"
           />

        <Button
            android:id="@id/save_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:onClick="cs_save"
            android:text="保存到本地"
            android:textSize="16sp"
           />
   

        <Button
            android:id="@+id/submit_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:onClick="cs_submit"
            android:text="提交"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>