                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*站点类型" />

                <Spinner
                    android:id="@id/zhandianlx_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip" />
