<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:cacheColorHint="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5.0dip" >

    <ScrollView
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*吊线名称" />

                <EditText
                    android:id="@id/sw_name_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>

            

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*所属维护区域" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/sw_maintenance_edit"
                        style="@style/edit_3"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.0"
                        android:editable="false"
                        android:paddingTop="3.0dip"
                        android:text="" />

                    <ImageView
                        android:id="@id/sw_maintenance_select_button"
                        android:background="@drawable/get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:onClick="maintenance_select_onc"
                        android:text="获取" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*所属杆路" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/sw_poleline_edit"
                        style="@style/edit_3"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.0"
                        android:editable="false"
                        android:paddingTop="3.0dip"
                        android:text="" />

                    <ImageView
                        android:id="@id/sw_poleline_select_button"
                        android:background="@drawable/get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:onClick="poleline_select_onc"
                        android:text="获取" />
                </LinearLayout>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="数据质量责任人" />

                <EditText
                    android:id="@+id/sjzlzrr"
                    style="@style/edit_3"
                    android:enabled="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="一线维护人" />

                <EditText
                    android:id="@+id/yxwhr"
                    style="@style/edit_3"
                    android:enabled="false"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="*吊线编号" />

                <EditText
                    android:id="@id/sw_code_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="长度" />

                <EditText
                    android:id="@id/changdu_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numeric="decimal"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="资源生命周期" />

                <Spinner
                    android:id="@id/ziyuansmzq_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="生命周期时间" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@id/shengmzhouqishijian_edit"
                        style="@style/edit_3"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:editable="false"
                        android:paddingTop="3.0dip"
                        android:text="" />

                    <ImageView
                        android:id="@id/shengmzhouqishijian_button"
                        android:background="@drawable/get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="是否授权管理" />

                <Spinner
                    android:id="@id/sfsqguanli_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="40.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="授权管理单位" />

                <EditText
                    android:id="@id/sqgldw_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="设计用途" />

                <EditText
                    android:id="@id/sjyt_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5.0dip" >

                <TextView
                    style="@style/text_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="备注" />

                <EditText
                    android:id="@id/note_edit"
                    style="@style/edit_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3.0dip"
                    android:text="" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/formActionArea"
        android:id="@id/layout_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@id/cs_save_button"
           style="@style/Widget.AppCompat.Button.Borderless.Colored"
		    android:textSize="16sp"
    		android:gravity="center"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            android:onClick="cs_save"
            android:text="保存" />

        

        <Button
            android:id="@id/delete_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
		    android:textSize="16sp"
    		android:gravity="center"
            android:layout_width="0.0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            android:text="删除"
            android:onClick="cs_delete" />
    </LinearLayout>

</LinearLayout>